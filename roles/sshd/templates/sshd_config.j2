AllowUsers {{ sshd.allow_users | union(users | map(attribute='name') | list) | unique | join(' ') }}
PermitRootLogin no
PrintLastLog no
PasswordAuthentication {{ 'yes' if (sshd.enable_password_authentication | default('false') | bool) else 'no' }}
UsePAM no
ChallengeResponseAuthentication no

IgnoreRhosts yes
RhostsAuthentication no
RSAAuthentication yes

LoginGraceTime 60
MaxStartups 2
AllowTcpForwarding no
X11Forwarding no
PermitEmptyPasswords no

ClientAliveInterval 300
ClientAliveCountMax 0
